---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">(◡︵◡)</h1>
        <h2 class="text-lg lg:text-3xl font-medium">404: Page Not Found.</h2>
        <p class="text-lg mt-4 text-slate-600">Womp womp. The page you're looking for doesn't exist.</p>
      </div>
    </div>
  </Container>
</Layout>
